<Page x:Class="Trackio.View.PageProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trackio.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="PageProject">
    <Grid Background="#FFD0D0D0">


        <TabControl x:Name="tabControl" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="tabProjectProperties" Header="Project's Properties" Width="200" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tabTests" Header="Tests" Width="200">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tabTracker" Header="Tracker" Width="200">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Frame x:Name="pageTab" Content="" NavigationUIVisibility="Hidden" Margin="1,23,0,27" Background="#FFA26D6D" Width="900" Height="600"/>
    </Grid>
</Page>
