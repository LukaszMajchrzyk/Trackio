<Window x:Class="Trackio.View.WindowsMessageGeneric" WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trackio.View"
        mc:Ignorable="d"
        Title="Info" Height="250" Width="250" Icon="/View/icon_cropped.png">
    <Grid Background="#FFD0D0D0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="737*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlockText" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center"  Height="113" Width="121"/>
        <Button x:Name="buttonClose" Grid.Column="1" Content="Close" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Width="74" Click="buttonClose_Click"/>


    </Grid>
</Window>
